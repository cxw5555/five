<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bj1"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#368fe9" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="85dp"
            android:background="#00000000"
            android:src="@drawable/logo1" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton_s3"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_alignRight="@+id/textView1"
        android:layout_alignTop="@+id/imageButton_s1"
        android:background="@drawable/pk"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/imageButton_s1"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/pk"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/imageButton_s2"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_alignLeft="@+id/imageButton_s1"
        android:layout_below="@+id/imageButton_s1"
        android:layout_marginTop="18dp"
        android:background="@drawable/pk"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/imageButton_s4"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_alignLeft="@+id/imageButton_s3"
        android:layout_alignTop="@+id/imageButton_s2"
        android:background="@drawable/pk"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton_s2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="随便选，别客气"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffffff"
        android:textSize="35sp" />

</RelativeLayout>