<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2e2e2"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#368fe9" >

        <ImageButton
            android:id="@+id/imageButton_introduce"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="#00000000"
            android:src="@drawable/user" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="85dp"
            android:background="#00000000"
            android:src="@drawable/logo1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:background="@drawable/nav1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.5"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/Button_easy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/jdjc"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="简单选择"
            android:textSize="22sp" />

        <Button
            android:id="@+id/Button_ai"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/rgzhn"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="人工智能选择"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="143dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.5"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/Button_ballot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/toupiao"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="投票选择"
            android:textSize="22sp" />

        <Button
            android:id="@+id/Button_expert"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/zixun"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="专家咨询"
            android:textSize="22sp" />
    </LinearLayout>

</LinearLayout>